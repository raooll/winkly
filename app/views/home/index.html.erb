<% if user_signed_in? %>
  <!-- Navbar -->
  <nav class="bg-white shadow-sm fixed top-0 left-0 right-0 z-50">
    <div class="px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-16">
        <div class="flex items-center">
          <button id="sidebarToggle" class="lg:hidden mr-4 text-gray-500 hover:text-gray-700">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
          <%= link_to root_path do %>
            <h1 class="text-2xl font-bold text-indigo-600">Winkly</h1>
          <% end %>
        </div>
        
        <div class="flex items-center space-x-4">
          <span class="text-gray-700 hidden sm:block"><%= current_user.email %></span>
          <%= button_to "Sign Out", destroy_user_session_path, method: :delete, 
              class: "px-4 py-2 text-sm font-medium text-white bg-red-600 rounded-md hover:bg-red-700" %>
        </div>
      </div>
    </div>
  </nav>

  <!-- Sidebar -->
  <aside id="sidebar" class="fixed left-0 top-16 h-full w-64 bg-white shadow-lg transform -translate-x-full lg:translate-x-0 transition-transform duration-300 ease-in-out z-40">
    <div class="p-6">
      <h2 class="text-xs font-semibold text-gray-400 uppercase tracking-wider mb-4">Menu</h2>
      <nav class="space-y-2">
        <%= link_to root_path, class: "flex items-center px-4 py-3 text-gray-700 bg-indigo-50 rounded-lg border-l-4 border-indigo-600" do %>
          <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
          </svg>
          Dashboard
        <% end %>

        <%= link_to short_urls_path, class: "flex items-center px-4 py-3 text-gray-600 hover:bg-gray-50 rounded-lg hover:text-gray-900" do %>
          <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"></path>
          </svg>
          Short URLs
        <% end %>

        <%= link_to root_path, class: "flex items-center px-4 py-3 text-gray-600 hover:bg-gray-50 rounded-lg hover:text-gray-900" do %>
          <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
          </svg>
          Analytics
        <% end %>
      </nav>
    </div>
  </aside>

  <!-- Overlay for mobile -->
  <div id="sidebarOverlay" class="fixed inset-0 bg-black bg-opacity-50 z-30 hidden lg:hidden"></div>

  <!-- Main Content -->
  <main class="lg:ml-64 pt-16 min-h-screen">
    <div class="p-8">
      <!-- Welcome Section -->
      <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900 mb-2">Welcome back!</h1>
        <p class="text-gray-600">Create and manage your short URLs</p>
      </div>

      <!-- URL Shortener Form -->
      <div class="bg-white rounded-lg shadow-md p-8 mb-8">
        <h2 class="text-2xl font-bold text-gray-900 mb-2">Create Short URL</h2>
        <p class="text-gray-600 mb-6">Create a short link that alternates between two destinations</p>

        <%= form_with url: short_urls_path, method: :post, local: true, class: "space-y-6" do |f| %>
          <!-- URL 1 (Required) -->
          <div>
            <label for="url1" class="block text-sm font-medium text-gray-700 mb-2">
              First URL <span class="text-red-500">*</span>
            </label>
            <input 
              type="url" 
              name="short_url[url1]" 
              id="url1" 
              required
              placeholder="https://example.com/page1"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
            />
          </div>

          <!-- URL 2 (Optional) -->
          <div>
            <label for="url2" class="block text-sm font-medium text-gray-700 mb-2">
              Second URL <span class="text-gray-400">(Optional)</span>
            </label>
            <input 
              type="url" 
              name="short_url[url2]" 
              id="url2"
              placeholder="https://example.com/page2"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
            />
            <p class="mt-2 text-sm text-gray-500">If provided, clicks will alternate between both URLs</p>
          </div>

          <!-- Custom Short URI (Optional) -->
          <div>
            <label for="short_uri" class="block text-sm font-medium text-gray-700 mb-2">
              Custom Short Code <span class="text-gray-400">(Optional)</span>
            </label>
            <div class="flex items-center space-x-2">
              <div class="flex-1 relative">
                <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                  <span class="text-gray-500 text-sm">winkly.app/</span>
                </div>
                <input 
                  type="text" 
                  name="short_url[short_uri]" 
                  id="short_uri"
                  placeholder="my-link"
                  pattern="[a-zA-Z0-9_-]+"
                  class="w-full pl-28 pr-12 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
                />
              </div>
            </div>
            <p class="mt-2 text-sm text-gray-500">Leave blank to generate a random 5-character code. Only letters, numbers, hyphens, and underscores allowed.</p>
          </div>

          <!-- Submit Button -->
          <div class="flex justify-end">
            <%= f.submit "Create Short URL", 
                class: "px-8 py-3 text-lg font-medium text-white bg-indigo-600 rounded-lg hover:bg-indigo-700 shadow-lg cursor-pointer" %>
          </div>
        <% end %>
      </div>

      <!-- Quick Stats -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="bg-white rounded-lg shadow-md p-6">
          <div class="flex items-center">
            <div class="p-3 bg-indigo-100 rounded-lg">
              <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"></path>
              </svg>
            </div>
            <div class="ml-4">
              <p class="text-sm text-gray-500">Total URLs</p>
              <p class="text-2xl font-bold text-gray-900">0</p>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-lg shadow-md p-6">
          <div class="flex items-center">
            <div class="p-3 bg-green-100 rounded-lg">
              <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 15l-2 5L9 9l11 4-5 2zm0 0l5 5M7.188 2.239l.777 2.897M5.136 7.965l-2.898-.777M13.95 4.05l-2.122 2.122m-5.657 5.656l-2.12 2.122"></path>
              </svg>
            </div>
            <div class="ml-4">
              <p class="text-sm text-gray-500">Total Clicks</p>
              <p class="text-2xl font-bold text-gray-900">0</p>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-lg shadow-md p-6">
          <div class="flex items-center">
            <div class="p-3 bg-purple-100 rounded-lg">
              <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
            </div>
            <div class="ml-4">
              <p class="text-sm text-gray-500">Avg. CTR</p>
              <p class="text-2xl font-bold text-gray-900">0%</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <script>
    // Sidebar toggle for mobile
    const sidebarToggle = document.getElementById('sidebarToggle');
    const sidebar = document.getElementById('sidebar');
    const sidebarOverlay = document.getElementById('sidebarOverlay');

    sidebarToggle.addEventListener('click', () => {
      sidebar.classList.toggle('-translate-x-full');
      sidebarOverlay.classList.toggle('hidden');
    });

    sidebarOverlay.addEventListener('click', () => {
      sidebar.classList.add('-translate-x-full');
      sidebarOverlay.classList.add('hidden');
    });
  </script>

<% else %>
  <!-- Landing Page for Non-Logged In Users -->
  <div class="min-h-screen bg-gradient-to-br from-indigo-50 to-purple-50 flex items-center justify-center px-4">
    <div class="max-w-4xl mx-auto text-center">
      <h1 class="text-6xl font-bold text-gray-900 mb-6">
        Shorten Your URLs
        <span class="text-indigo-600">Smartly</span>
      </h1>
      <p class="text-xl text-gray-600 mb-8">
        Create short links that alternate between two destinations. Perfect for A/B testing and campaigns.
      </p>
      
      <div class="flex justify-center space-x-4">
        <%= link_to "Get Started", new_user_registration_path, 
            class: "px-8 py-4 text-lg font-medium text-white bg-indigo-600 rounded-lg hover:bg-indigo-700 shadow-lg" %>
        <%= link_to "Sign In", new_user_session_path, 
            class: "px-8 py-4 text-lg font-medium text-indigo-600 bg-white rounded-lg hover:bg-gray-50 shadow-lg" %>
      </div>
    </div>
  </div>
<% end %>